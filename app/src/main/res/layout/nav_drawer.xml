<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nav_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:orientation="vertical"
        android:gravity="bottom"
        android:padding="16dp"
        android:background="@drawable/nav_header_bg">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo_circle_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menue"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="edu@gmail.com"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/nav_home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="Acceuil"
            android:textSize="20dp"
            android:drawableLeft="@drawable/baseline_home_24"
            android:drawablePadding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_cours_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="Cours"
            android:textSize="20dp"
            android:drawableLeft="@drawable/baseline_menu_book_24"
            android:drawablePadding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_AbonnementCours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="Abonnement"
            android:textSize="20dp"
            android:drawableLeft="@drawable/baseline_subscriptions_24"
            android:drawablePadding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_Paiement_Cours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="Paiement"
            android:textSize="20dp"
            android:drawableLeft="@drawable/baseline_subscriptions_24"
            android:drawablePadding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_blabla_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="blabla"
            android:textSize="20dp"
            android:drawableLeft="@drawable/baseline_home_24"
            android:drawablePadding="10dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/blue"/>

    <LinearLayout
        android:id="@+id/nav_profile_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="Profile"
            android:textSize="20dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="logout"
            android:textSize="20dp"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:drawablePadding="10dp"/>

    </LinearLayout>

</LinearLayout>