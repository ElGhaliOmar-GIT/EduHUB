<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    android:elevation="0dp"
    app:cardBackgroundColor="@color/light_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/dashboard_paiement_nom_carte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="nom_carte"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/dashboard_paiement_type_carte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="type_carte"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/dashboard_paiement_item_modifier_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_mode_edit_24"
            android:background="@drawable/paiement_btn_shape"
            android:layout_marginEnd="10dp"/>

        <ImageButton
            android:id="@+id/dashboard_paiement_item_supprimer_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_delete_24"
            android:background="@drawable/paiement_btn_shape"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
